{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["esnext"],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "declaration": true,
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": false,
    "preserveSymlinks": true
  },
  "exclude": ["**/dist/**"]
}
