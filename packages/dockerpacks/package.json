{
  "name": "@wxcloud/dockerpacks",
  "version": "2.0.1-beta.13",
  "description": "A powerful library for generating a Dockerfile file from arbitrary source codes",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": "^16",
    "pnpm": "^7"
  },
  "sideEffects": false,
  "scripts": {
    "test": "vitest --no-threads --config vitest.config.ts",
    "test:update": "vitest --no-threads --update --config vitest.config.ts",
    "build": "rimraf dist && tsup",
    "build:watch": "rimraf dist && tsup --watch"
  },
  "repository": {
    "type": "git",
    "url": "git@git.woa.com:wx-cloudbase/dockerpacks.git"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/lodash": "^4.14.182",
    "@types/node-fetch": "^2.6.1",
    "@types/semver": "^7.3.9",
    "rimraf": "^3.0.2",
    "tsconfig-paths": "^3.14.1",
    "tsup": "^5.12.6",
    "vite-tsconfig-paths": "^3.4.1",
    "vitest": "^0.10.2"
  },
  "dependencies": {
    "glob": "^7.2.0",
    "jszip": "^3.9.1",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.7",
    "semver": "^7.3.5",
    "split-cmd": "^1.0.1",
    "yaml": "^2.0.0"
  }
}
