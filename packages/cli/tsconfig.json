{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "composite": true,
    "noEmit": false
  },
  "include": ["src/**/*"],
  "ts-node": {
    "swc": true,
    "transpileOnly": true,
    "files": true
  }
}
