{
  "name": "@wxcloud/monorepo",
  "private": true,
  "version": "2.0.1-beta.12",
  "scripts": {
    "build": "pnpm --filter=!*-server --filter=!docs -r run build",
    "build:all": "pnpm -r run build",
    "bump": "bumpp package.json packages/*/package.json --commit --push --tag",
    "release": "pnpm -r publish --filter=!*-server --access=public --registry=https://registry.npmjs.org/ --no-git-checks --tag=alpha"
  },
  "devDependencies": {
    "@types/node": "^16",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "bumpp": "^7.1.1",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.2",
    "typescript": "^4.6.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "typescript"
      ]
    }
  }
}
